<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="@string/NewContestHeader"
        android:textSize="24sp"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#000000"/>

    <EditText

        style="@style/MyTheme.EditText"
        android:textColor="#000000"
        android:id="@+id/newContestName"
        android:hint="Contest Name"
        android:layout_marginTop="37dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Create Contest"
        android:id="@+id/createContest"
        android:textSize="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/newContestName"
        android:layout_alignStart="@+id/newContestName"
        android:layout_marginBottom="43dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newContestName"
        android:layout_alignLeft="@+id/newContestName"
        android:layout_alignStart="@+id/newContestName"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Contest"
            android:id="@+id/radioButtonPrivate"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contest With Friends"
            android:id="@+id/radioButtonFriends"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Contest"
            android:id="@+id/radioButtonPublic"
            android:checked="false" />

    </RadioGroup>


    <EditText
        style="@style/MyTheme.EditText"
        android:textColor="#000000"
        android:id="@+id/friend"
        android:hint="@string/opponentName"
        android:layout_marginTop="37dp"
        android:textSize="15sp"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>


</RelativeLayout>
