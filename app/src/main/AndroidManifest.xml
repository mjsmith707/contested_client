<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edgecase.contested" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-sdk
        android:targetSdkVersion="18" />
    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/appiconidea"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityFragments.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".ActivityFragments.MainActivity">
        </activity>
        <activity android:label="@string/app_name" android:name=".ActivityFragments.RegisterActivity">
        </activity>
    </application>

</manifest>